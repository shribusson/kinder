{
  "name": "kinder-crm",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "cd apps/api && npx prisma generate",
    "dev:web": "npm run -w @kinder/web dev",
    "dev:api": "npm run -w @kinder/api start:dev",
    "build": "npm run -w @kinder/web build && npm run -w @kinder/api build",
    "build:web": "npm run -w @kinder/web build",
    "build:api": "cd apps/api && npx prisma generate && npm run build",
    "lint": "npm run -w @kinder/web lint"
  }
}
