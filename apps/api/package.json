{
  "name": "@kinder/api",
  "private": true,
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "ts-node prisma/seed.ts",
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@bull-board/api": "^6.16.4",
    "@bull-board/express": "^6.16.4",
    "@nestjs/bull": "^11.0.4",
    "@nestjs/common": "10.4.4",
    "@nestjs/core": "10.4.4",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/platform-socket.io": "^10.4.22",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/websockets": "^10.4.22",
    "@prisma/client": "5.18.0",
    "ari-client": "^2.2.0",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "crypto-js": "^4.2.0",
    "dotenv": "16.4.5",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "mime-types": "^2.1.35",
    "multer": "^1.4.4-lts.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "socket.io": "^4.8.3",
    "telegraf": "^4.16.3",
    "whatsapp-api-js": "^6.2.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.9",
    "@nestjs/schematics": "10.1.2",
    "@nestjs/testing": "10.4.4",
    "@types/bcrypt": "^6.0.0",
    "@types/bull": "^3.15.9",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.12",
    "@types/mime-types": "^3.0.1",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.5",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "prisma": "5.18.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.5.4"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!main.ts",
      "!**/*.module.ts",
      "!**/*.interface.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/../test/helpers/jest.setup.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 40,
        "lines": 40,
        "statements": 40
      }
    },
    "verbose": true
  }
}
