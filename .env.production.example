JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database Credentials (GENERATE STRONG 32-CHAR PASSWORDS)
# Generate password with: pwgen -s 32 1
DATABASE_URL=postgresql://postgres:REPLACE_WITH_PASSWORD@postgres:5432/kinder_crm
