POSTGRES_PASSWORD=
POSTGRES_DB=kinder_crm

# Redis Configuration
REDIS_URL=redis://redis:6379

# S3/MinIO Storage (GENERATE STRONG CREDENTIALS)
# Generate user with: pwgen -s 20 1
# Generate password with: pwgen -s 32 1
MINIO_ROOT_USER=
MINIO_ROOT_PASSWORD=
S3_ENDPOINT=http://minio:9000
S3_BUCKET=kinder-media
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1

# Monitoring & Logging
LOG_LEVEL=info
NODE_ENV=production

# Grafana Admin Password
# Generate with: pwgen -s 24 1
GRAFANA_PASSWORD=

# Optional: Sentry Error Tracking
SENTRY_DSN=

